{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@components/*": ["components/*"],
      "@lib/utils": ["lib/utils"],
      "@components/ui/*": ["components/ui/*"],
      "@lib/*": ["lib/*"],
      "@hooks/*": ["hooks/*"],
      "@assets/*": ["assets/*"],
      "@pages/*": ["pages/*"],
    },
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false
  }
}
